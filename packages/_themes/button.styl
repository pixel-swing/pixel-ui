.p-button 
  color: var(--p-color-default)
  min-height: 38px
  padding: 0 20px
  margin: 6px 8px
  user-select: none
  border: 1px solid #cacdcf
  border-radius: 3px
  font-size: 14px
  text-transform: uppercase
  font-weight: var(--p-font-weight)
  background: var(--p-color-white)


.p-button:not([disabled]) 
  cursor: pointer;

/* button size */
.p-button--large
  padding: 0 24px
  min-height: 42px

.p-button--medium
  padding: 0 16px
  min-height: 32px

.p-button--small 
  padding: 0 14px
  min-height: 28px

.p-button--mini
  padding: 0 12px
  min-height: 24px
  font-size: var(--p-font-size-small)

/** button type */
.p-button--primary
  color: var(--p-color-white)
  border-color: var(--p-color-primary)
  background: var(--p-color-primary)
.p-button--success
  color: var(--p-color-white)
  border-color: var(--p-color-success)
  background: var(--p-color-success)
.p-button--info
  color: var(--p-color-white)
  border-color: var(--p-color-info)
  background: var(--p-color-info)
.p-button--warning
  color: var(--p-color-white)
  border-color: var(--p-color-warning)
  background: var(--p-color-warning)
.p-button--danger 
  color: var(--p-color-white)
  border-color: var(--p-color-danger)
  background: var(--p-color-danger) 
